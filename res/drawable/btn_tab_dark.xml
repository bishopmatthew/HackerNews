<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false" android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/bright_accent"></solid>
        </shape></item>
        
    <item android:state_checked="true"><layer-list>
            <item><shape>
                    <solid android:color="@color/bright_accent" />
                </shape></item>
            <item android:top="6dp"><shape android:shape="rectangle">
                    <solid android:color="@color/grey_30" />
                </shape></item>
        </layer-list></item>
        
    <item><layer-list>
            <item><shape>
                    <solid android:color="@color/bright_accent" />
                </shape></item>
            <item android:top="1.5dp"><shape android:shape="rectangle">
                    <solid android:color="@color/grey_30" />
                </shape></item>
        </layer-list></item>

</selector>